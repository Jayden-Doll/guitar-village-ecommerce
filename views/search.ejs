<%- include ("head") %>
<body>
  <%- include ("navbar") %>
  <div class="site-wrapper">
    <% if(results.length) { %> <% results.forEach(({ searchName, name, brand,
    bodysize, description1, price, img } = result) => {%>
    <h1><%= searchName %> - <%= price %></h1>
    <% if(brand === "Martin") { %>
    <img src="<%= img %>" alt="" />
    <% } else { %>
    <img width="50%" src="<%= img %>" alt="" />
    <% } %> <% }) %> <% } else {%> <% if(searchTermTrimmed === "") {%>
    <p class="search-fail-text">No search results found.</p>
    <p class="search-fail-text">Try entering a guitar or brand name.</p>
    <% } else {%>
    <p class="search-fail-text">
      No search results found for:
      <span class="search-term">"<%= searchTermTrimmed %>"</span>.
    </p>
    <p class="search-fail-text">Try entering a valid guitar or brand name.</p>
    <% } %> <% } %>
  </div>
  <%- include ("footer") %>
</body>
